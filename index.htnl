<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Online Cinema Ticketing</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to right, #141e30, #243b55);
      color: #fff;
    }
    /* Navbar */
    .menu ul {
      display: flex;
      flex-direction: row;
      list-style: none;
      background: #0f3460;
      justify-content: center;
      padding: 12px 0;
    }
    .menu ul li {
      padding: 12px 25px;
      cursor: pointer;
      font-weight: bold;
      color: #f1f1f1;
      transition: all 0.3s ease;
    }
    .menu ul li:hover {
      background-color: #e94560;
      color: #fff;
      border-radius: 6px;
    }

    /* Container */
    .container {
      display: flex;
      flex-direction: row-reverse;
      justify-content: center;
      align-items: flex-start;
      flex-wrap: wrap;
      gap: 20px;
      padding: 30px;
    }

    /* Form Styling */
    .container form {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(6px);
      display: flex;
      flex-direction: column;
      width: 320px;
      border-radius: 12px;
      padding: 20px;
      row-gap: 15px;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.6);
      transition: transform 0.3s ease;
    }
    .container form:hover {
      transform: scale(1.03);
    }
    label {
      margin-bottom: 5px;
      font-weight: bold;
      color: #ffdf6c;
    }
    input, select {
      padding: 10px;
      border-radius: 6px;
      border: none;
      outline: none;
      font-size: 14px;
    }
    input:focus, select:focus {
      border: 2px solid #e94560;
    }
    #age:out-of-range {
      background-color: lightcoral;
      color: #000;
    }

    /* Button */
    .btn {
      padding: 12px;
      background: #e94560;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    .btn:hover {
      background: #ff4c75;
      transform: scale(1.05);
    }

    /* Image */
    img {
      max-width: 450px;
      width: 100%;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.7);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .container {
        flex-direction: column-reverse;
        align-items: center;
      }
      .container form {
        width: 90%;
      }
      img {
        width: 90%;
      }
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <div class="menu">
    <ul>
      <li>Movies</li>
      <li>Cinema Halls</li>
      <li>Tickets</li>
      <li>Refreshments</li>
      <li>Contact Us</li>
    </ul>
  </div>

  <!-- Main Container -->
  <div class="container">
    <!-- Booking Form -->
    <form action="">
      <div>
        <label for="name">Name:</label>
        <input type="text" placeholder="Enter your name">
      </div>
      <div>
        <label for="NIC">CNIC:</label>
        <input type="number" placeholder="Enter CNIC">
      </div>
      <div>
        <label for="Contact">Phone No:</label>
        <input type="number" placeholder="Enter phone number">
      </div>
      <div>
        <label for="age">Age:</label>
        <input type="number" placeholder="Age..." min="18" max="45" id="age">
      </div>
      <div>
        <label for="type">Choose Movie Category:</label>
        <select>
          <option>Lollywood</option>
          <option>Hollywood</option>
          <option>Bollywood</option>
        </select>
      </div>
      <div>
        <label for="gender">Gender:</label>
        <select name="gender">
          <option value="Male">Male</option>
          <option value="Female">Female</option>
        </select>
      </div>
      <button type="submit" class="btn">Book Ticket ðŸŽŸ</button>
    </form>

    <!-- Cinema Image -->
    <div>
      <img src="/WhatsApp Image 2025-09-08 at 7.42.11 PM.jpeg" alt="Dark Cinema Picture">
    </div>
  </div>
</body>
</html>
